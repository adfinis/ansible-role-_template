---

- name: include assert.yml
  ansible.builtin.import_tasks: assert.yml
  run_once: yes
  delegate_to: localhost

- name: show string
  ansible.builtin.debug:
    msg: "{% raw %}{{{% endraw %}{{ role_name }}_string {% raw %}}}{% endraw %}"

- name: show item from list
  ansible.builtin.debug:
    msg: "{% raw %}{{ item }}{% endraw %}"
  loop: "{% raw %}{{{% endraw %}{{ role_name }}_list {% raw %}}}{% endraw %}"

- name: show map
  ansible.builtin.debug:
    msg: "{% raw %}{{{% endraw %}{{ role_name }}_map {% raw %}}}{% endraw %}"

- name: show ansible_os_family
  ansible.builtin.debug:
    msg: "{% raw %}{{ ansible_os_family }}{% endraw %}"

- name: show rendered_string
  ansible.builtin.debug:
    msg: "{% raw %}{{ rendered_string }}{% endraw %}"
